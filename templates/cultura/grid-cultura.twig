<table class="ui selectable olive compact celled definition table">
	
	<thead>
		<tr>
			<th class="one wide"></th>
			<th class="thirteen wide">Cultura</th>
			<th class="one wide center aligned">Cor</th>
			<th class="one wide center aligned"></th>
		</tr>
	</thead>
	<tbody>

	<tr v-for="entity in entities" style="cursor: pointer;">
		<td class="center aligned" v-on:dblclick="show(entity.id, $event)"><%entity.id%></td>
		<td v-on:dblclick="show(entity.id, $event)"><%entity.descr%></td>
		<td class="center aligned" v-on:dblclick="show(entity.id, $event)"><i class="circle icon" style="color: <%entity.cor%>;"></i></td>
		<td class="center aligned">
			<button class="mini ui red compact icon button" v-on:click="delete(entity.id, $event)">
				<i class="remove icon"></i>
			</button>
		</td>
	</tr>

  </tbody>
