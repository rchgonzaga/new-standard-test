<script type="text/javascript">
	executes.onShow.push(
		function(self){
            // SET THE SELECT VALUES
            var elPais = $('#id_estado');
            var id_estado = self.$get('newEntity.id_estado');
            elPais.dropdown('set selected',[id_estado]);
		}
	);

	executes.onCreate.push(
		function(entity){
			// WORKAROUND
			entity.id_estado = $('#id_estado').val();
		}
	);	

</script>
