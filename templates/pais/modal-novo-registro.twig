<div class="ui modal small" id="add{{module|capitalize}}">
	<i class="close icon"></i>
	<div class="header">
		Adicionar usuário
	</div>

	<div class="content">

	<form action="#" @submit.prevent="AddNewUser" method="POST" class="ui form">
			
		<div class="fields">

		  <div class="nine wide field">
			<label>Nome</label>
			<input type="text" placeholder="País" v-model="newEntity.descr" id="descr" name="descr" style="text-transform:uppercase">
		  </div>

		  <div class="seven wide field">
			<label>Abreviação</label>
			<input type="text" placeholder="Abreviação" v-model="newEntity.abreviacao" id="abreviacao" name="abreviacao" >
		  </div>

		</div>


	</form>

	</div>
	  <div class="actions">
		<div class="ui black deny button" v-on:click="cancel($event)">
		  Cancelar
		</div>
		<div class="ui positive right labeled icon button" v-on:click="create($event)">
		  Salvar
		  <i class="checkmark icon"></i>
		</div>
	  </div>
</div>